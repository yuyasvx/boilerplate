{
  "extends": "./node_modules/@fitbit/sdk/sdk-tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2015"
    ],
    "inlineSources": false,
    "sourceMap": false,
    "typeRoots": [
      "@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/*.ts",
    "node_modules/fitbit-sdk-types/types/device",
    "node_modules/fitbit-sdk-types/types/shared"
  ],
  "exclude": [
    "./src/app",
    "./src/companion"
  ]
}
